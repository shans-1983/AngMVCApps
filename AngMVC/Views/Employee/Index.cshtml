@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .warning {
        border: 1px solid red;
    }
</style>
<div ng-controller="EmpCtrl">
    <div>
        @* <h2 align="center">Angular JS Basic Example</h2>*@
        <h5 align="center">Employee List</h5>
        <input type="button" class="btn btn-success" value="Add Employee" ng-click="AddEmployeeDiv()" />
        <div ng-show="divEmployee" class="modal-content" style="width:25%">
            <div class="modal-header">
                <p class="divHead">{{Action}} Employee</p>
            </div>
            <div class="modal-body">
                <table>
                    <tr>
                        <td hidden><b>Id</b></td>
                        <td>
                            <input hidden type="text" disabled="disabled" ng-model="EmployeeId" />
                        </td>
                    </tr>
                    <tr>
                        <td><b>Name</b></td>
                        <td>
                            <input type="text" ng-model="EmployeeName" required />
                        </td>
                    </tr>
                    <tr>
                        <td><b>Address</b></td>
                        <td>
                            <input type="text" multiple ng-model="Address" required />
                        </td>
                    </tr>
                    <tr>
                        <td><b>Email</b></td>
                        <td>
                            <input type="email" validate-email name="email" id="email" ng-model="EmailId" required />
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <input type="button" class="btn btn-success" value="Save" ng-click="AddUpdateEmployee()" />
                        </td>
                    </tr>
                </table>
            </div>
            <div class="modal-footer">
            </div>
        </div>
        <table border="1" cellpadding="10" align="center" class="table table-bordered table-condensed table-responsive table-striped">
            <thead>
                <tr>
                    <th>
                        Employee Id
                    </th>
                    <th>
                        Employee Name
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        Email Id
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="emp in employees">
                    <td>
                        {{emp.EmployeeId}}
                    </td>
                    <td>
                        {{emp.EmployeeName}}
                    </td>
                    <td>
                        {{emp.Address}}
                    </td>
                    <td>
                        {{emp.EmailId}}
                    </td>
                    <td>
                        <span ng-click="editEmployee(emp)" class="btn btn-warning btn-sm">Edit</span>
                        <span ng-click="deleteEmployee(emp)" class="btn btn-danger btn-sm">Delete</span>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>